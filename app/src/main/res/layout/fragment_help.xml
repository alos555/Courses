<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Центр помощи"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Здесь вы можете найти ответы на часто задаваемые вопросы или связаться с поддержкой."
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvFAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Часто задаваемые вопросы"
        android:textColor="#FF3F51B5"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/tvContactSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Связаться с поддержкой"
        android:textColor="#FF3F51B5"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>