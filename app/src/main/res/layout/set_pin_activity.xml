<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <EditText
        android:visibility="invisible"
        android:id="@+id/etSetPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:focusable="false"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:ems="4"
        android:background="@android:color/transparent"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/set_pin1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_pin" />
        <ImageView
            android:id="@+id/set_pin2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/circle_pin" />
        <ImageView
            android:id="@+id/set_pin3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_pin" />
        <ImageView
            android:id="@+id/set_pin4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle_pin" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSetPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Установить ПИН"
        android:layout_marginTop="30dp"
        android:enabled="false"/>
    <!-- Цифровая клавиатура -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <!-- Ряд 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="1"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="2"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="3"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Ряд 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="4"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="5"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="6"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Ряд 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="7"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="8"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="9"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Ряд 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent"/> <!-- Пустое место -->

            <Button
                android:id="@+id/btn0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="0"
                android:textSize="24sp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="⌫"
                android:textSize="24sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>